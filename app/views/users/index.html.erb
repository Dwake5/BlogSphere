<div class="card" style="margin-top: 50px; margin-left: 50px; margin-right: 50px">
  <div class="card-header" style= "width: 50%">
    <h4>Featured Author</h4>
  </div>
    <% @user = @users.sample%>
    <div class="card-body">
    <div class="row">
    <img class="col-sm-2" height="150" src=<%= @user.img_url %>>
    <div class="col-sm-2">
      <h5 class="card-title"><%= @user.name%></h5>
      <p class="card-text"><%= @user.bio.truncate(100, separator: ' ')%>.</p>
      <a href=<%= user_path(@user) %> class="btn btn-primary">Learn More</a>
    </div>
  </div>
</div>
</div>

<div class="card" style="margin-top: 50px; margin-left: 50px; margin-right: 50px">
<div class="card-header">
    <h4>All Authors</h4>
  </div>
<?div>
<div class="card-columns" style="margin-top: 50px">
<% @users.sort.each do |u| %>
  <div class="card" style="width: 22rem; margin-left: 38px">
    <img height="200" width="150" src=<%= u.img_url %> class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= link_to u.name, u %></h5>
      <p class="card-text"><%= u.bio %></p>
    </div>
  </div>
  <% end %>
</div>

