<div class="row" style="margin-top: 50px">
    <div class="card-columns">
    <% @posts.each do |p| %>
    <div class="card" style="width: 25rem; margin-left: 40px; margin-right: -50px">
        <img src=<%= p.img_url %> class="card-img-top" alt="...">
        <div class="card-body">
        <h5 class="card-title"><%= link_to p.title, p %></h5>
        <p class="card-text"><%= p.content.truncate(100, separator: ' ') %></p>
        </div>
    </div>
    <% end %>
    </div>
</div>